{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "module": "es2015",
    "target": "es2017", //es2017 because script engine requires for async execution
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "scripthost",
      "es2015",
      "esnext",
      "DOM.Iterable"
    ],
    "jsx": "react"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", "src/Dialogs/OpenDrawing.ts",
    "src/types.d.ts"
  ]
}